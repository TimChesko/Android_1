<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android1">
        <activity
            android:name=".SettingsActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="appFromOutside" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

<!--В другом приложении прописываем в onCreate-->
<!--Intent i = new Intent("appFromOutside");-->
<!--startActivity(i);-->

        </activity>
    </application>
</manifest>
    <!--allowBackUp - резервное копирование-->
    <!--supportsRtl - поддержка написания справа налево-->
    <!--activity - точка входа-->
    <!--intent-filter - набор параметров (фильтры намерений)-->
    <!--action - задать название действия, которое будет обслуживаться-->
    <!--category - при каких обстоятельствах должно обслуживаться действие
    LAUNCHER - помещаем Активность в окно для запуска приложений-->